    "icon": "./assets/icon/small-white-512x512.png",
    "target": [
      "AppImage",
      "snap",
      "deb",
      "tar.xz"
    ]
  },
  "mac": {
    "category": "public.app-category.productivity",
    "icon": "./assets/icon/small-white-512x512.png",
